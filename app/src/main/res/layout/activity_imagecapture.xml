<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/takePhotoButton"
        android:layout_marginBottom="32dp"
        android:onClick="takePhotoButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imagecapturePic"
        android:layout_alignEnd="@+id/imagecapturePic"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagecapturePic"
        android:minHeight="400dp"
        android:minWidth="400dp"
        android:onClick="launchCamera"
        android:layout_above="@+id/takePhotoButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SavePhoto"
        android:id="@+id/savePhoto"
        android:layout_alignTop="@+id/takePhotoButton"
        android:layout_toLeftOf="@+id/takePhotoButton"
        android:layout_toStartOf="@+id/takePhotoButton"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:onClick="savePhotoClicked" />
</RelativeLayout>